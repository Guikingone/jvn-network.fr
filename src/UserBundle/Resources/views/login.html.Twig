{% extends('::layout.html.twig')%}
{% block body %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <!-- Si message d'erreur via l'authentification, on l'affiche -->
      {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
      {% endif %}
      <h2 class="text-center">Se connecter</h2>
      <hr />
        <form action="#" method="post" class="text-center">
          <div class="form-group">
            <label for="username">Pseudo :
              <input class="form-control" type="text" id="pseudo" naem="_pseudo" value="{{ last_username }}"/>
            </label>
          </div>
          <div class="form-group">
            <label for="password">Mot de passe :
              <input class="form-control" type="password" id="password" name="_password"/>
            </label>
          </div>
          <br />
          <button class="btn btn-danger" type="submit" value="connexion">Connexion</button>
        </form>
    </div>
  </div>
</div>
{% endblock %}
