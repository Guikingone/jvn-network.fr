{% extends ('CoreBundle::layout.html.twig')%}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <a href="{{path('forums_home')}}" class="btn btn-info">Retour à l'accueil</a>
      {% if is_granted('ROLE_MODERATEUR')%}
      <div class="row">
        <hr />
        <h4 class="text-center">Outils de modération</h4>
          <a href="{{ path('forums_delete', {'id': sujet.id}) }}" class="btn btn-danger">Supprimer ce sujet</a>
          <a href="#" class="btn btn-info">Modifier ce sujet</a>
      </div>
      <hr />
      {% endif %}
      <h3 class="text-center">{{ sujet.titre }}</h3>
      <br>
      <h4 class="text-center">Par <strong>{{ sujet.auteur }}</strong>, le {{ sujet.dateCreation|date('d/m/Y') }}</h4>
      <hr />
      <p class="text-center">{{ sujet.contenu|raw }}</p>
      <br>
      <br>
    </div>
    <div class="row">
      <h4 class="text-center">Commentaires liés</h4>
      <hr />
      <!-- On affiche les commentaires liés au sujet -->
      {% for msg in message %}
        <div class="row">
          <div class="col-lg-2">
            <p class="text-center"><strong><a href="#">{{ msg.auteur }}</a></strong></p>
            <p class="text-center">{{ msg.dateMessage|date('d/m/Y') }}</p>
          </div>
          <div class="col-lg-10">
            <p class="text-center">{{ msg.contenu|raw }}</p>
          </div>
        </div>
        <hr />
      {% endfor %}
    </div>
    <div class="row text-center">
      <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
          {{ form_label(form.auteur, "Auteur", {'label_attr': {'class': 'control-label'}}) }}
          {{ form_errors(form.auteur) }}
          {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_end(form) }}
      </div>
    </div>
    <div class="row">
      <hr />
      <p class="text-center">Outils Sujet</p>
      <p class="text-center"><a href="#" class="btn btn-success">Fermer ce sujet</a></p>
    </div>
  </div>
</div>
{% endblock %}
