{% extends('CoreBundle::layout.html.twig')%}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="text-center">Back Office</h2>
      <hr />
      <p class="text-center">
        <strong><em>
          Toute modification effectuée ici est vérifiée avant validation sur le serveur, afin que la procédure se passe
        dans les meilleures conditions, merci de surveiller les messages d'erreurs/données entrées/modifications effectuées
        avant de valider toute manipulation.
        </em></strong>
        <br>
      </p>
    </div>
    {% for message in app.session.flashbag.get('success') %}
      <div class="alert alert-success">Message flash : {{message}}</div>
    {% endfor %}
  </div>
  <hr />
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#articles" data-toggle="tab">Articles</a></li>
            <li><a href="#comments" data-toggle="tab">Commentaires</a></li>
            <li><a href="#sujet" data-toggle="tab">Sujet</a></li>
            <li><a href="#user" data-toggle="tab">Utilisateur</a></li>
        </ul>
    </div>
  </div>
  <div class="tab-content">
      <div class="tab-pane fade in active adminTable" id="articles">
        <!-- On créer une boucle afin de savoir si des articles sont trouvés, si oui, on affiche le menu
        d'édition, sinon on affiche un message d'erreur -->
        {% if article is not null %}
          <div class="table-responsive">
              <table class="table table-hover table-condensed">
                <br>
                  <thead>
                      <tr>
                          <th>Titre</th>
                          <th>Contenu</th>
                          <th>Date de publication</th>
                          <th>Auteur</th>
                          <th>Catégorie</th>
                          <th>Outils</th>
                      </tr>
                  </thead>
                  {% for article in article %}
                  <!-- On affiche les articles en affichant le titre, le contenu (limité à 45 caractères),
                  la date de publication ainsi que son auteur -->
                  <tr>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.contenu[:45]|raw }}</td>
                    <td>{{ article.datePublication | date('d/m/Y')}}</td>
                    <td>{{ article.auteur }}</td>
                    <td>{{ article.categorie }}</td>
                      <td>
                        <a href="{{ path('team_delete', {'id': article.id }) }}" class="btn btn-danger">Supprimer</a>
                      </td>
                    <td>
                      <a class="btn btn-primary" href="{{ path('team_update', {'id': article.id }) }}">Modifier</a>
                    </td>
                  </tr>
                  {% endfor %}
              </table>
          </div>
          <a href="{{ path('team_add') }}"><button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Ajouter un article</button></a>
      </div>
      {% else %}
        <div class="alert alert-danger"><p>Articles introuvable</p></div>
      {% endif %}
      <div class="tab-pane fade adminTable" id="comments">
        <!-- On affichera les commentaires du blog afin de pouvoir les modifier -->
        <div class="table-responsive">
          {% if commentaire is not null %}
            <table class="table table-hover table-condensed">
              <br>
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Contenu</th>
                        <th>Date de création</th>
                        <th>Outils</th>
                    </tr>
                </thead>
                  {% for commentaire in commentaire %}
                  <tr>
                    <td>{{ commentaire.auteur }}</td>
                    <td>{{ commentaire.contenu[:20]|raw }}</td>
                    <td>{{ commentaire.dateCreation|date('d/m/Y') }}</td>
                    <td>
                      <a href="{{path('team_delete_commentaires', {'id': commentaire.id})}}" class="btn btn-danger">Supprimer</a>
                      <a href="#" class="btn btn-info">Modifier</a>
                    </td>
                  </tr>
                  {% endfor %}
             </table>
            {% endif %}
        </div>
      </div>
      <div class="tab-pane fade adminTable" id="sujet">
        <!-- On affichera les commentaires du blog afin de pouvoir les modifier -->
        <div class="table-responsive">
          {% if sujet is not null %}
            <table class="table table-hover table-condensed">
              <br>
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Titre</th>
                        <th>Contenu</th>
                        <th>Catégorie</th>
                    </tr>
                </thead>
                  {% for sujet in sujet %}
                  <tr>
                    <td>{{ sujet.auteur }}</td>
                    <td>{{ sujet.contenu[:20]|raw }}</td>
                    <td>{{ sujet.dateCreation|date('d/m/Y') }}</td>
                    <td>
                      <a href="#" class="btn btn-danger">Supprimer</a>
                      <a href="#" class="btn btn-info">Modifier</a>
                    </td>
                  </tr>
                  {% endfor %}
             </table>
        </div>
        <a href="#"><button type="button" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Ajouter un Sujet</button></a>
      </div>
      {% else %}
        <p class="alert alert-danger">Aucun Sujet trouvé</p>
      {% endif %}
      <div class="tab-pane fade adminTable" id="user">
        <!-- On affichera les utilisateurs inscrits afin de pouvoir les manipuler -->
        <div class="table-responsive">
          {% if user is not null %}
            <table class="table table-hover table-condensed">
              <br>
                <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Email</th>
                        <th>Date d'inscription</th>
                        <th>Role</th>
                        <th>Outils</th>
                        <th>Messagerie</th>
                    </tr>
                </thead>
                  {% for user in user %}
                  <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td></td>
                    <td></td>
                    <td>
                      <a href="#" class="btn btn-danger">Supprimer</a>
                      <a href="#" class="btn btn-info">Modifier</a>
                      <a href="#" class="btn btn-success">Changer rôle</a>
                    </td>
                    <td><a href="#" class="btn btn-primary">Envoyer un mail</a></td>
                  </tr>
                  {% endfor %}
             </table>
            {% endif %}
        </div>
      </div>
    </div>
</div>
{% endblock %}
