{% extends('::layout.html.twig')%}
{% block body %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="text-center">Bienvenue sur le Blog officiel de l'Equipe</h2>
      <hr />
    </div>
    <div class="col-lg-12">
      <!-- On affiche les articles rÃ©cents via la boucle for -->
      {% for article in article %}
      <article>
        <h2 class="text-center"><a href="#">{{ article.titre }}</a></h2>
        <p class="text-center">{{ article.contenu }}</p>
        <p class="text-center">Par {{ article.auteur }}</p>
      </article>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
