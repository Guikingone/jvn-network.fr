{% extends ('::layout.html.twig')%}
{% block title %}Forums - Ajouter un sujet{% endblock %}
{% block body %}
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="text-center">Ajouter un sujet</h3>
      <hr />
      <br>
    </div>
  </div>
  <div class="row">
    <div class="well">
      {{ form_start(form) }}
      {{ form_errors(form) }}
      <div class="form-group">
        {{ form_label(form.titre, "Ajouter un titre", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_errors(form) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        {{ form_label(form.contenu, "Contenu", {'label_attr': {'class': 'control-label'}}) }}
        {{ form_errors(form.contenu) }}
        {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
      </div>
      <div class="form-group">
        {{ form_widget(form.save, {'attr': {'class': 'btn btn-danger'}})}}
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
