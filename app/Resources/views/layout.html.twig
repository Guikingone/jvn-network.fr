 <!DOCTYPE html>
<html>
 <head>
     <meta charset="utf-8" />
     <title>{% block title %}JVN-Network.fr - Là où la communauté prend les commandes{% endblock %}</title>
      {% block stylesheets %}
          <link href="{{ asset('css/Bootstrap/bootstrap.min.css') }}" rel="stylesheet">
          <link href="{{ asset('assets/vendor/Materialize/dist/css/materialize.min.css') }}" rel="stylesheet">
          <link href="{{ asset('css/main.css') }}" rel="stylesheet">
          <link href="{{ asset('css/normalize.css') }}" rel="stylesheet">
          <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
          <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      {% endblock %}
     <script src="{{ asset('js/vendor/modernizr-2.8.3.min.js')}}"></script>
 </head>
<body>
<header>
  <!-- Navbar Utilisateur -->
  <div id="wrapper">
    <div id="topBar">
      <div class="container">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          <ul class="top-links list-inline pull-right">
            <li class="text-welcome hidden-xs">Bienvenue sur JVN, <strong>{{app.user.username}}</strong></li>
            <li>
              <a class="dropdown-toggle no-text-underline" data-toggle="dropdown" href="">Mon compte</a>
              <ul class="dropdown-menu pull-right">
                <li><a tabindex="-1" href="{{ url('fos_user_profile_show') }}"><i class="fa fa-user"></i>Mon profil</a></li>
                {% if is_granted('ROLE_TEAM')%}
                  <li><a tabindex="-1" href="{{ url('equipe_admin') }}"><i class="fa fa-desktop"></i>Back office Team</a></li>
                  <li><a tabindex="-1" href="{{ url('membre_admin') }}"><i class="fa fa-desktop"></i>Back Office Membre</a></li>
                  <li><a tabindex="-1" href="{{ url('krma_admin') }}"><i class="fa fa-desktop"></i>Back Office Krma</a></li>
                {% elseif is_granted('ROLE_ADMIN')%}
                  <li><a tabindex="-1" href="#"><i class="fa fa-desktop"></i>Administration</a></li>
                  <li><a tabindex="-1" href="{{ url('membre_admin') }}"><i class="fa fa-desktop"></i>Blog Membre</a></li>
                {% elseif is_granted('ROLE_KRMA')%}
                  <li><a tabindex="-1" href="{{ url('krma_admin') }}"><i class="fa fa-desktop"></i>Back Office || KRMA Blog</a></li>
                {% elseif is_granted('ROLE_AUTEUR')%}
                  <li><a tabindex="-1" href="{{ url('membre_admin') }}"><i class="fa fa-desktop"></i>Back Office || MEMBRE Blog</a></li>
                {% endif %}
                <li class="divider"></li>
                <li><a tabindex="-1" href="#"><i class="fa fa-bookmark"></i>Mes commandes</a></li>
                <li><a tabindex="-1" href="#"><i class="fa fa-tag"></i>Ma liste de souhait</a></li>
                <li><a tabindex="-1" href="#"><i class="fa fa-shopping-bag"></i>Mes articles</a></li>
                <li class="divider"></li>
                <li><a tabindex="-1" href="{{ url('fos_user_security_logout') }}"><i class=" fa fa-sign-out"></i>Se déconnecter</a></li>
              </ul>
            </li>
          </ul>
        {% else %}
          <ul class="top-links list-inline pull-right">
            <li>
              <a href="{{ url('fos_user_registration_register') }}">S'inscrire</a>
            </li>
            <li>
              <a href="{{ url('fos_user_security_login') }}">Se connecter</a>
            </li>
          </ul>
        {% endif %}
        <ul class="top-links list-inline">
          <li class="hidden-xs"><a href="{{path('contact')}}">CONTACT</a></li>
          <li class="hidden-xs"><a href="{{path('mentions')}}">Mention légales</a></li>
        </ul>
      </div>
    </div>
  <nav class="navbar navbar-default">
  			<div class="container">
  				<div class="navbar-header">
  					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
  						<span class="sr-only">Toggle navigation</span>
  						<span class="icon-bar"></span>
  						<span class="icon-bar"></span>
  						<span class="icon-bar"></span>
  					</button>
  					<a class="navbar-brand page-scroll" href="{{path('home')}}">JVN-Network</a>
  				</div>
  				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  					<ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
  							<a data-toggle="dropdown" href="#">Blog<b class="caret"></b></a>
  							<ul class="dropdown-menu">
  								<li>
 									<a href="{{path('equipe')}}">L'Equipe</a>
  								</li>
  								<li>
  									<a href="{{path('krma')}}">Krma TV</a>
  								</li>
                        <li>
                    <a href="{{path('membre_blog')}}">Les Membres</a>
                  </li>
							  </ul>
  						</li>
  						<li>
  							<a href="{{path('communaute')}}">Communauté</a>
  						</li>
  						<li>
  							<a href="{{path('forums')}}">Forums</a>
  						</li>
  						<li>
  							<a href="{{path('boutique')}}">Boutique</a>
  						</li>
  					</ul>
  				</div>
  		</div>
    </nav>
  </div>
</header>
  <!-- On affiche les messages flash -->
  {% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-info text-center">Message flash : {{message}}</div>
  {% endfor %}

{% block body %}{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js')}}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js')}}"></script>
    <script src="{{ asset('assets/vendor/Materialize/dist/js/materialize.min.js') }}"></script>
    <script src="{{ asset('js/main.js')}}"></script>
    <script src="{{ asset('js/social/social.js')}}"></script>

  <!-- Chargement TinyMCE -->
  <script src="{{ asset('js/tinymce/tinymce.min.js')}}"></script>
  <script>tinymce.init({ selector:'textarea' })</script>

  <!-- Outils Google Analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-72251522-1', 'auto');
    ga('send', 'pageview');
  </script>
{% endblock %}
</body>
</html>
